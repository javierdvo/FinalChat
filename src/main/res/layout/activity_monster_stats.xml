<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.javier.finalfantasychat.MonsterStats">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/id_iv_Mheroimg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ayla" />
    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:id="@+id/id_iv_monsterbg"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Mstrong"
        android:layout_marginTop="80dp"
        android:src="@drawable/ayla" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MhealthBar"
        android:layout_alignParentEnd="true"
        android:progressTint="#ffff000e"
        android:minHeight="20dp"
        android:minWidth="130dp"
        android:mirrorForRtl="false"
        android:progress="50" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginRight="20dp"
        android:id="@+id/Mname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Mlevel"
        android:layout_toEndOf="@+id/Mname" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/MtextView10"
        android:id="@+id/Mstrong"

        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:minWidth="130dp"
        android:id="@+id/MtextView5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Mname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="130dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView6"
        android:layout_below="@+id/MtextView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="130dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView7"
        android:layout_below="@+id/MtextView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:minWidth="130dp"
        android:id="@+id/MtextView8"
        android:layout_below="@+id/MtextView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView9"
        android:layout_below="@+id/MtextView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView10"
        android:layout_below="@+id/MtextView15"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView3"
        android:layout_below="@+id/MtextView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView4"
        android:layout_below="@+id/MtextView3"
        android:layout_alignParentStart="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView"
        android:layout_below="@+id/MtextView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/MtextView15"
        android:layout_below="@+id/MtextView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
